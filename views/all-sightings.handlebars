{{> nav-bar }}

<div class="container">
  <div class="divider"></div>
  <div class="row">
    <div class="col s2"></div>
    <div class="col s8" id="table-col">
      <table class="striped birds-table">
        <thead class="table-head">
          <tr>
            <th>Bird Name</th>
            <th>Image</th>
            <th>Location</th>
            <th>Date Sighted</th>
            {{!-- <th>Item Price</th> --}}
          </tr>
        </thead>

        <tbody class="table-body">
          {{#each sightings}}


          <tr>
            <td><a href="/sightings/{{id}}" class="bird-tag">{{Bird.common_name}}</td></a>

            <td><img src="{{image_URL}}" id="bird-img" /></td> 
            <td>{{location}}</td>
            <td>{{createdAt}}</td>
          </tr> 

          {{/each}}

        </tbody>
      </table>
    </div>
  </div>
  <div class="col s2"></div>
</div>