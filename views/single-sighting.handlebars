{{> nav-bar }}


<div class="container center-align">

    <h2 class="">{{Bird.common_name}}</h2>
    <div class="row">
        <div class="col s12">
            <div class="single-card-custom center-align">
                <div class="single-card-image">
                    <img alt="image of {{Bird.common_name}}" src="{{image_URL}}" class="single-bird-img responsive-img">

                    <span class="card-title">
                        <h5>Last sighting: {{location}}, {{createdAt}}</h5>

                    </span>
                </div>
                <span class="card-content center-align">
                    <h5>Spotted by: <a href="/users/{{User.id}}">{{User.user_name}}</a></h5>
                    <h5>Total Score: {{User.score}}</h5>
                    <h5 class="contrast-color">Comments: {{comments}}</h5>
                    <h5>Points earned: {{Bird.points}}</h5>

                </span>
            </div>

        </div>

        <div class="row center-align">
            <div class="col s12 l4 action-buttons">
                <a href="/sightings"><button class="btn-large btn"><i class="fas fa-kiwi-bird"></i> View all
                        sightings</button></a>
            </div>

            <div class="col s12 l4 action-buttons">
                <a href="/sighting/new"><button class="btn-large btn"><i class="fas fa-camera"></i> Add a
                        sighting</button></a>
            </div>
        </div>
    </div>
</div>


</div>
















