{{> nav-bar }}

<div class="container center-align">

  <h2 class="" data-userId="{{user.id}}">{{user.user_name}}</h2>
  <h5 id="user_score">Score: <span style="color:black">{{user.score}} points</span></h5>

  <div class="divider"></div>
  <div class="row">
    <div class="col s8 offset-s2 center-align">
      <table class="birds-table striped">
        <thead class="table-head">
          <tr>
            <th>Date</th>
            <th>Bird</th>
            <th class="center-align">Image</th>
            <th>Location</th>
            <th>Points</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        {{#if sightings}}
        <tbody class="table-body">
          {{#each sightings}}
          {{> sighting-list}}
          {{/each}}
        </tbody>
      </table>
      {{else}}
      </table>
      <p>Welcome to Bird Brains! You have no sightings yet.</p>
      <p>To get started, add your first sighting.</p>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <a href="/sighting/new?user_id={{user.id}}"><button class="btn">Add a Sighting!</button></a>
  </div>

</div>

<script src="/assets/js/user-sightings.js"></script>